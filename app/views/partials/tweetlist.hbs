
<form class="ui form deleteAllTweets">
  <button class="ui red submit button">Delete All Tweets</button>
</form>
<form class="ui form deleteTweets">
  {{#each tweets}}
    <div class="ui fluid card" value="{{tweeter._id}}">
      <div class="content">
        <div class="right floated meta">14h</div>
        <img class="ui avatar image" src="/getPublicPicture/{{{tweeter._id}}}" altSrc="images/placement.jpg"
             onerror="this.src = $(this).attr('altSrc')"> {{tweeter.firstName}} {{tweeter.lastName}}
      </div>
      <div class="content">
        {{content}}
        {{#if this.picture.data}}
          <div class="image">
            <br><img src="/getTweetPicture/{{{_id}}}">
          </div>
        {{/if}}
      </div>
      <div class="content">
        <input type="checkbox" id="delete" name="id" value={{_id}}>
      </div>
    </div>
  {{/each}}
  <div class="ui raised segment">
    <p>Select tweets to be deleted and click this button here</p>
    <button class="ui small red submit button">Delete</button>
  </div>
</form>
